<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#CCCCCC"
    android:orientation="vertical">

    <TextView
        android:id="@+id/stepper_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="description"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_default"
        android:orientation="horizontal">

        <Button
            android:id="@+id/stepper_decrease"
            android:layout_width="@dimen/stepper_width"
            android:layout_height="@dimen/stepper_height"
            android:text="@string/stepper_decrease" />

        <TextView
            android:id="@+id/stepper_value"
            android:layout_width="@dimen/stepper_value_width"
            android:layout_height="wrap_content"
            android:background="#CCCCCC"
            android:gravity="center"
            android:text="@string/stepper_default_value"
            android:textStyle="bold" />

        <Button
            android:id="@+id/stepper_increase"
            android:layout_width="@dimen/stepper_width"
            android:layout_height="@dimen/stepper_height"
            android:text="@string/stepper_increase" />


    </LinearLayout>

</LinearLayout>